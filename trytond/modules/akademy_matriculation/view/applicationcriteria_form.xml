<form>
    <group id="application_criteria" colspan="4" col="4">    
        <label name="name"/>
        <field name="name"/>  
        <label name="code"/>
        <field name="code"/>  
        <label name="lective_year"/>
        <field name="lective_year"/>
        <label name="academic_level"/>
        <field name="academic_level"/>
        <label name="area"/>
        <field name="area"/>
        <label name="course"/>
        <field name="course"/>                      
        <label name="course_classe"/>
        <field name="course_classe"/>
        <label name="phase"/>
        <field name="phase"/>
    </group>  
    <group id="criteria_info" colspan="4" col="6">  
        <label name="student_limit"/>
        <field name="student_limit"/> 
        <label name="average"/>
        <field name="average"/>
        <label name="age"/>
        <field name="age"/>
    </group>  
    <notebook colspan="4">
        <page string="Descrição" id="description">
            <field name="description" widget="richtext"/>
        </page>
    </notebook> 
</form>
