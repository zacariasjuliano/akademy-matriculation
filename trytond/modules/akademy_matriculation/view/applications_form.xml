<form>  
    <group id="applications" colspan="4" col="4"> 
        <label name="lective_year"/>
        <field name="lective_year" width="25"/> 
        <label name="academic_level"/>
        <field name="academic_level" />   
        <label name="area"/>
        <field name="area" />    
        <label name="course"/>
        <field name="course"/>
        <label name="phase"/>
        <field name="phase" width="50"/>
        <label name="course_classe"/>
        <field name="course_classe" width="50"/>
        <label name="reference"/>
        <field name="reference"/>         
    </group>    
    <notebook colspan="4">
        <page string="Descrição" id="description">
            <field name="description" widget="richtext"/>
        </page>
        <page string="Resultados" id="application_result">
            <field name="result" mode="tree" colspan="4"
                view_ids="akademy_matriculation.applications_result_view_tree"/>
        </page>
    </notebook>
</form>
