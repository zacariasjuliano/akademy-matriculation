<tryton>
        <data>            
                <!-- start matriculation_reference -->
                <record model="ir.ui.view" id="matriculation_reference_view_form">
                        <field name="model">akademy_configuration.matriculation.reference</field>
                        <field name="type">form</field>
                        <field name="name">matriculation_reference_form</field>
                </record>
                <record model="ir.ui.view" id="matriculation_reference_view_list">
                        <field name="model">akademy_configuration.matriculation.reference</field>
                        <field name="type">tree</field>
                        <field name="name">matriculation_reference_list</field>
                </record>
                <record model="ir.action.act_window" id="act_matriculation_reference">
                        <field name="name">Referência da matrícula</field>
                        <field name="res_model">akademy_configuration.matriculation.reference</field>
                </record>
                <record model="ir.action.act_window.view" id="act_matriculation_reference_view_form">
                        <field name="sequence" eval="4"/>
                        <field name="view" ref="matriculation_reference_view_form"/>
                        <field name="act_window" ref="act_matriculation_reference"/>
                </record>
                <record model="ir.action.act_window.view" id="act_matriculation_reference_view_list">
                        <field name="sequence" eval="3"/>
                        <field name="view" ref="matriculation_reference_view_list"/>
                        <field name="act_window" ref="act_matriculation_reference"/>
                </record>
                <menuitem name="Referência da matrícula" parent="akademy_classe.akademy_config_pre" id="akademy_matriculation_reference" 
                        sequence="2" action="act_matriculation_reference"/>  
                
                <!-- start lective_year -->
                <record model="ir.ui.view" id="lective_year_view_form">
                        <field name="model">akademy_configuration.lective.year</field>                    
                        <field name="inherit" ref="akademy_classe.lective_year_view_form"/>
                        <field name="name">lective_year_form</field>            
                </record>

                <!-- start application criteria -->
                <record model="ir.ui.view" id="applicationcriteria_view_form">
                        <field name="model">akademy_configuration.application.criteria</field>
                        <field name="type">form</field>
                        <field name="name">applicationcriteria_form</field>
                </record>
                <record model="ir.ui.view" id="applicationcriteria_view_list">
                        <field name="model">akademy_configuration.application.criteria</field>
                        <field name="type">tree</field>
                        <field name="name">applicationcriteria_list</field>
                </record>
                
                <!-- start phase -->
                <record model="ir.ui.view" id="phase_view_form">
                        <field name="model">akademy_configuration.phase</field>
                        <field name="type">form</field>
                        <field name="name">phase_form</field>
                </record>
                <record model="ir.ui.view" id="phase_view_tree">
                        <field name="model">akademy_configuration.phase</field>
                        <field name="type">tree</field>
                        <field name="name">phase_list</field>
                </record>
        </data>
</tryton>